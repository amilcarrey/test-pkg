{
  "name": "amilcarrey-widget",
  "version": "1.0.4",
  "description": "A React widget component with shadcn/ui Card and Tailwind CSS",
  "author": "amilcarrey",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/amilcarrey/trt-widget.git"
  },
  "keywords": [
    "react",
    "widget",
    "shadcn",
    "tailwind",
    "card",
    "component"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --external react --minify --clean && bunx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --minify",
    "build:css": "bunx @tailwindcss/cli -i ./src/styles.css -o ./dist/styles.css --minify",
    "dev": "tsup src/index.tsx --format cjs,esm --dts --external react --watch",
    "lint": "eslint src/"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0"
  }
}